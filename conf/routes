# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
#GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
#GET     /message                    controllers.AsyncController.message


# Customer page
GET     /customer                          controllers.CustomerController.index
#GET     /customer/view/:id                           controllers.CustomerController.get(id : Long)
GET     /customer/regist                           controllers.CustomerController.add
GET     /customer/edit/:id                           controllers.CustomerController.edit(id : Long)
POST    /customer/create                     controllers.CustomerController.create
POST    /customer/update                     controllers.CustomerController.update
GET    /customer/remove/:id                     controllers.CustomerController.delete(id : Long)

# Login page
GET        /custom/login        @controllers.CustomLoginController.login
GET        /custom/logout       @controllers.CustomLoginController.logout

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
# Auth plugin securesocial
-> /auth securesocial.Routes

